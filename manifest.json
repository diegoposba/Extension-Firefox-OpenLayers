{
  "manifest_version": 2,
  "name": "OLE - OpenLayers Extension",
  "version": "1.0",

  "description": "Afficher la position de l'utilisateur sur une carte OpenLayers.",

  "icons": {
    "48": "icons/border-48.png"
  },

  "permissions": [
    "geolocation"
  ],

  "browser_action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "48": "icons/icon-48.png",
      "96": "icons/icon-96.png"
    },
    "default_title": "Geoloc"
  },
  
  "content_security_policy": "script-src 'self' https://cdn.jsdelivr.net; object-src 'self'"
}